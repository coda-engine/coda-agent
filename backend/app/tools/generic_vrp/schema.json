{
  "openapi": "3.0.0",
  "info": {
    "title": "Generic VRP Solver API",
    "description": "A generic optimization engine for Vehicle Routing Problems (VRP), Capacity VRP (CVRP), VRP with Time Windows (VRPTW), and Pickup & Delivery Problems (PDP). It optimizes routes for fleets based on custom dimensions and relational constraints.",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "https://vrp-solver-37559127936.us-east1.run.app",
      "description": "Production VRP Solver"
    }
  ],
  "paths": {
    "/": {
      "post": {
        "operationId": "solve_vrp",
        "summary": "Solve a Vehicle Routing Problem",
        "description": "Submits a VRP definition and returns optimized routes. Requires defining vehicles, service stops (nodes), cost matrices, configuration dimensions, and optional relations (PDP).",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VrpRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Optimization successful (Feasible or No Solution found)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VrpResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation Error (Invalid Schema or Constraints)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Solver Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "VrpRequest": {
        "type": "object",
        "required": [
          "configuration",
          "vehicles",
          "services",
          "matrices"
        ],
        "properties": {
          "configuration": {
            "$ref": "#/components/schemas/Configuration"
          },
          "vehicles": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/components/schemas/Vehicle"
            },
            "description": "List of available vehicles."
          },
          "services": {
            "type": "array",
            "minItems": 2,
            "items": {
              "$ref": "#/components/schemas/Service"
            },
            "description": "List of locations/jobs to visit. Index 0 is typically the Depot."
          },
          "relations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Relation"
            },
            "description": "List of constraints defining relationships between nodes (e.g., Pickup & Delivery pairs)."
          },
          "matrices": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "number",
                  "minimum": 0
                }
              }
            },
            "description": "Dictionary of distance/time matrices. Keys are IDs referenced in dimensions."
          }
        }
      },
      "Configuration": {
        "type": "object",
        "required": [
          "dimensions"
        ],
        "properties": {
          "time_limit_sec": {
            "type": "integer",
            "default": 10,
            "description": "Max solver runtime in seconds."
          },
          "deterministic_mode": {
            "type": "boolean",
            "default": false,
            "description": "If true, uses fast deterministic heuristics instead of metaheuristics."
          },
          "time_dimension_name": {
            "type": "string",
            "description": "Name of the dimension representing time (required if time_windows are used)."
          },
          "log_search": {
            "type": "boolean",
            "default": false
          },
          "dimensions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Dimension"
            },
            "minItems": 1
          }
        }
      },
      "Dimension": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "distance"
          },
          "type": {
            "type": "string",
            "enum": [
              "cost",
              "time",
              "capacity"
            ]
          },
          "matrix_id": {
            "type": "string",
            "description": "ID of the matrix to use for transit costs."
          },
          "property_id": {
            "type": "string",
            "description": "Property name in Service objects to use for node costs (e.g., 'demand', 'service_time')."
          },
          "is_objective": {
            "type": "boolean",
            "description": "Exactly one dimension must be true."
          },
          "slack": {
            "type": "integer",
            "default": 0,
            "description": "Allowed waiting time or slack."
          },
          "span_cost": {
            "type": "integer",
            "description": "Coefficient to balance routes (minimize max-min difference)."
          },
          "service_time_policy": {
            "type": "string",
            "enum": [
              "at_start_node",
              "at_end_node"
            ],
            "default": "at_start_node",
            "description": "For composite time dimensions: does service time happen before travel (at_start) or after (at_end)?"
          },
          "global_horizon": {
            "type": "integer",
            "description": "Override max value for accumulate dimensions."
          },
          "fix_start_cumul": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "Vehicle": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": [
              "string",
              "integer"
            ]
          },
          "start_index": {
            "type": "integer",
            "default": 0,
            "description": "Index in 'services' array where vehicle starts."
          },
          "end_index": {
            "type": "integer",
            "default": 0,
            "description": "Index in 'services' array where vehicle ends."
          },
          "fixed_cost": {
            "type": "integer",
            "minimum": 0,
            "description": "Cost incurred if this vehicle is used."
          },
          "capacities": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "minimum": 0
            },
            "description": "Map of dimension names to capacity limits (e.g., {'weight': 100})."
          },
          "time_window": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 2,
            "maxItems": 2,
            "description": "[start, end] shift hours for this vehicle."
          }
        }
      },
      "Service": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": [
              "string",
              "integer"
            ]
          },
          "penalty": {
            "type": "integer",
            "minimum": 0,
            "description": "If set, node is optional. Cost to skip this node."
          },
          "allowed_vehicle_indices": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "description": "List of vehicle indices allowed to visit this node."
          },
          "time_windows": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "integer"
              },
              "minItems": 2,
              "maxItems": 2
            },
            "description": "List of [start, end] windows. Currently solver optimizes for the first window."
          }
        },
        "additionalProperties": {
          "type": [
            "integer",
            "number"
          ],
          "description": "Dynamic properties referenced by dimension 'property_id' (e.g., 'demand': 5)."
        }
      },
      "Relation": {
        "type": "object",
        "required": [
          "type",
          "linked_ids"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "pickup_delivery",
              "same_vehicle",
              "sequence",
              "force_first",
              "force_last"
            ],
            "description": "The type of constraint. 'pickup_delivery' implies the first ID must be visited before the second on the same vehicle."
          },
          "linked_ids": {
            "type": "array",
            "items": {
              "type": [
                "string",
                "integer"
              ]
            },
            "minItems": 1,
            "description": "List of Service IDs involved in this relation."
          },
          "vehicle_id": {
            "type": [
              "string",
              "integer"
            ],
            "description": "Optional. If set, restricts the relation to a specific vehicle."
          }
        }
      },
      "VrpResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "FEASIBLE",
              "NO_SOLUTION"
            ]
          },
          "objective_value": {
            "type": "number"
          },
          "routes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "vehicle_id": {
                  "type": "integer"
                },
                "steps": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "node": {
                        "type": [
                          "string",
                          "integer"
                        ]
                      }
                    },
                    "additionalProperties": true
                  }
                },
                "metrics": {
                  "type": "object"
                }
              }
            }
          },
          "dropped_nodes": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    }
  }
}